<h1><%= @account.month %><B>月 </B></h1>

  <%= link_to " 新增", new_account_list_path(@account) ,class: "btn btn-primary , glyphicon glyphicon-usd" %>

  <table class="table table-hover ">
    <thead>
      <tr>
        <td>Date</td>
        <td>Item</td>
        <td>Cost</td>
        <td>Kind</td>
      </tr>
    </thead>
    <tbody>
      <% @lists.each do |list| %>
      <% if list.month == @account.month %>
      <tr>
        <td><%= list.date %></td>
        <td><%= list.item %></td>
        <td><%= list.cost %></td>
        <td><%= list.kind %></td>
        <td>
          <%= link_to " ", edit_account_list_path(@account, list) ,class: "btn btn-success , glyphicon glyphicon-wrench"%>
          <%= link_to " ", account_list_url(@account, list) , method: 'delete' , data: { confirm: "確認刪除" },class: "btn btn-danger  , glyphicon glyphicon-trash" %>
        </td>
        <% list_total(list) %>
      <% end %>
      <% end %>
    </tbody>
  </table>
  <h4>Total:<%= @account.total %></br></h4>
  <%= link_to "", accounts_path ,class: "btn btn-primary , glyphicon glyphicon-home" %>
