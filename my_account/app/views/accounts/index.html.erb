<h1>Account</h1>

  <%= link_to "", new_account_path ,class: "btn btn-primary , glyphicon glyphicon-plus" %>

  <table class="table table-hover ">
    <thead>
      <tr>
        <td>Month</td>
        <td>Limitation</td>
        <td>Remainder</td>

      </tr
    </thead>
    <tbody>
      <% @accounts.each do |account| %>
      <tr>
        <td><%= account.month %></td>
        <td><%= account.limitation %></td>

        <td><%=  %></td>
        <td></td>
        <td>
          <%= link_to "", account_lists_url(account) ,class: "btn btn-primary , glyphicon glyphicon-th-list"%>
          <%= link_to "", edit_account_path(account) ,class: "btn btn-success , glyphicon glyphicon-pencil"%>
          <%= link_to "", account , method: 'delete' , data: { confirm: "確認刪除" },class: "btn btn-danger , glyphicon glyphicon-trash" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
